<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Inscripción Curso Valle Grande</title>
    <!-- Agrega enlaces a Bootstrap CSS y JavaScript -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function mostrarCursos() {
            var carrera = document.getElementById("carrera").value;
            var agriculturaCursos = document.getElementById("agriculturaCursos");
            var sistemasCursos = document.getElementById("sistemasCursos");
            agriculturaCursos.style.display = "none";
            sistemasCursos.style.display = "none";
            if (carrera === "Producción Agraria") {
                agriculturaCursos.style.display = "block";
            } else if (carrera === "Análisis de Sistemas") {
                sistemasCursos.style.display = "block";
            }
        }
    </script>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="container mt-5">
                    <h2 class="mb-4">Formulario de Inscripción</h2>
<form action="/formulario" method="post">
    <div class="mb-3">
        <label for="nombres" class="form-label">Nombres</label>
        <input type="text" class="form-control" id="nombres" name="nombres" required pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" title="Solo se permiten letras y espacios">
    </div>
    <div class="mb-3">
        <label for="apellidos" class="form-label">Apellidos</label>
        <input type="text" class="form-control" id="apellidos" name="apellidos" required pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" title="Solo se permiten letras y espacios">
    </div>
    <div class="mb-3">
        <label for="dni" class="form-label">DNI</label>
        <input type="text" class="form-control" id="dni" name="dni" required pattern="\d{8}" title="Debe contener 8 dígitos numéricos">
    </div>
                        <div class="mb-3">
                            <label for="carrera" class="form-label">Carrera</label>
                            <select class="form-select" id="carrera" name="carrera" onchange="mostrarCursos()">
                                <option value="" selected disabled>Seleccione una carrera</option>
                                <option value="Análisis de Sistemas">Análisis de Sistemas</option>
                                <option value="Producción Agraria">Producción Agraria</option>
                            </select>
                        </div>

                        <div id="sistemasCursos" style="display: none;" class="mb-3">
                            <label for="cursosSistemas" class="form-label">Cursos</label>
                            <select class="form-select" id="cursosSistemas" name="cursos">
                                <option value="" selected disabled>Seleccione un curso</option>
                                <option value="Practica de proyecto JAVA">Practica de proyecto JAVA</option>
                                <option value="Trabajando con APP SCRIPT">Trabajando con APP SCRIPT</option>
                                <option value="Practica de SQL server">Practica de SQL server</option>
                                <option value="Trabajando con Docker">Trabajando con Docker</option>
                            </select>
                        </div>

                        <div id="agriculturaCursos" style="display: none;" class="mb-3">
                            <label for="cursosAgricultura" class="form-label">Cursos</label>
                            <select class="form-select" id="cursosAgricultura" name="cursos">
                                <option value="" selected disabled>Seleccione un curso</option>
                                <option value="Manejo Integrado de Plagas en Agricultura Sostenible">Manejo Integrado de
                                    Plagas en Agricultura Sostenible</option>
                                <option value="Agricultura de Precisión">Agricultura de Precisión</option>
                                <option value="Manejo Sostenible del Suelo y Recursos Naturales">Manejo Sostenible del
                                    Suelo y Recursos Naturales</option>
                                <option value="Agricultura Orgánica y Certificación">Agricultura Orgánica y
                                    Certificación</option>
                            </select>
                        </div>

    <button type="submit" class="btn btn-primary">Enviar Inscripción</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function enviarDatos(event) {
            event.preventDefault(); 

            const formData = new FormData(event.target);
            try {
                const response = await fetch('/formulario', {
                    method: 'POST',
                    body: formData
                });
                if (response.ok) {
                    console.log('Datos enviados al servidor correctamente');
                } else {
                    console.error('Error al enviar datos al servidor');
                }
            } catch (error) {
                console.error('Error al procesar la solicitud:', error);
            }
        }
    </script>

</body>

</html>
