<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">
        <style>
        #reloadButton {
            font-size: 13px;
        }
    </style>
        <script>
        var initialData = <%- JSON.stringify(data.slice(1)) %>;
    </script>

</head>

<body style="background-color: #f8f9fa;">
    <div class="wrapper">
        <aside id="sidebar" class="js-sidebar">
            <!-- Content For Sidebar -->
            <div class="h-100">
                <div class="sidebar-logo">
                    <a href="#"></a>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Admin Elements
                    </li>
                    <li class="sidebar-item">
                        <a href="/dashboard" class="sidebar-link">
                            <i class="fa-solid fa-list pe-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="sidebar-header">
                        Acciones
                    </li>
                    <li class="sidebar-item">
                        <a href="/matriculas" class="sidebar-link">
                            <i class="fa-solid fa-file pe-2"></i>
                            Matrículas
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/solicitudes" class="sidebar-link">
                            <i class="fa-solid fa-envelope pe-2"></i>
                            Solicitudes
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button id="reloadButton" class="btn btn-primary">Recargar Página</button>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Formulario</a>
                </li>
<li class="nav-item">
    <a class="nav-link" href="/logout">Cerrar Sesión</a>
</li>
            </ul>
        </nav>
            <main class="content px-3 py-2">
                <div class="container-fluid mt-3">
                    <h4 style="color: #007bff;">Matrículas</h4>
                    <div class="mb-3">
                        <label for="dniSearch" class="form-label">Buscar por DNI:</label>
                        <input type="text" class="form-control" id="dniSearch" placeholder="Ingrese DNI">
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="background-color: #f8f9fa; color: #343a40;">Nombres</th>
                                <th style="background-color: #f8f9fa; color: #343a40;">Apellidos</th>
                                <th style="background-color: #f8f9fa; color: #343a40;">DNI</th>
                                <th style="background-color: #f8f9fa; color: #343a40;">Carrera</th>
                                <th style="background-color: #f8f9fa; color: #343a40;">Cursos</th>
                            </tr>
                        </thead>
                        <tbody id="matriculasTableBody">
                            <% data.slice(1).forEach(entry => { %>
                                <tr>
                                    <td><%= entry[0] %></td>
                                    <td><%= entry[1] %></td>
                                    <td><%= entry[2] %></td>
                                    <td><%= entry[3] %></td>
                                    <td><%= entry[4] %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dniSearchInput = document.getElementById('dniSearch');
            const matriculasTableBody = document.getElementById('matriculasTableBody');
            let currentData = initialData.slice(); // Copia inicial de los datos

            function renderTable(data) {
                matriculasTableBody.innerHTML = '';

                data.forEach(entry => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${entry[0]}</td>
                        <td>${entry[1]}</td>
                        <td>${entry[2]}</td>
                        <td>${entry[3]}</td>
                        <td>${entry[4]}</td>
                    `;
                    matriculasTableBody.appendChild(row);
                });
            }

            function filterData() {
                const searchValue = dniSearchInput.value.trim().toLowerCase();
                const filteredData = currentData.filter(entry => entry[2].toLowerCase().includes(searchValue));
                renderTable(filteredData);
            }

            dniSearchInput.addEventListener('input', filterData);
            renderTable(currentData);

            reloadButton.addEventListener('click', function () {

                currentData = initialData.slice();
                renderTable(currentData); 
            });
        });
    </script>
</body>

</html>
